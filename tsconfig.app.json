{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"forceConsistentCasingInFileNames": true,
		"ignoreDeprecations": "6.0"
	},
	"include": [
		"src/**/*",
		"src/vite-env.d.ts"
	],
	"exclude": [
		"dist",
		"coverage",
		".vscode",
		".github"
	]
}
