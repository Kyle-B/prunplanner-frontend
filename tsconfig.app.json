{
	"include": [
		"src/**/*",
		"src/vite-env.d.ts",
	],
	"exclude": [
		"dist/**/*",
		"coverage/**/*",
		".vscode/**/*",
		".github/**/*",
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"skipLibCheck": true,
		"ignoreDeprecations": "6.0",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"lib": [
			"ESNext",
			"DOM",
		],
		"strict": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}
